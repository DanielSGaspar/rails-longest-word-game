
<div class="container">
  <h1>New Game</h1>
  <div class="container text-center">
    <div class = "row">
      <% @letters.each do |x|%>
        <div class = " d-flex bg-primary rounded m-2 text-light justify-content-center align-items-center fs-2"id="letter-display"><%= x.upcase %></div>
      <% end%>
    </div>
  </div>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false" class="d-flex col-6">
    <input type="text" class="form-control" name="word" id="user-input">
    <input type="submit" value="submit" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
